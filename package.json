{
  "name": "Redbrick-site",
  "version": "1.0.0",
  "description": "Statically generated site for redbrick.dcu.ie",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/redbrick/static-site"
  },
  "bugs": {
    "url": "http://github.com/redbrick/static-site/issues"
  },
  "license": "MIT",
  "scripts": {
    "server": "node ./bin/www",
    "test": "yarn lint && yarn build",
    "theme": "git submodule init && git submodule update --remote",
    "postinstall": "yarn theme && cd themes/redbrick-theme && yarn",
    "build": "hexo g",
    "docker": "git pull origin master && yarn start",
    "start": "yarn build && node ./bin/www ",
    "regenerate": "yarn postinstall && hexo clean && hexo g",
    "fix": "eslint . --fix",
    "lint": "eslint ."
  },
  "hexo": {
    "version": "3.3.9"
  },
  "dependencies": {
    "@risingstack/protect": "^1.2.0",
    "async": "^2.0.1",
    "body-parser": "~1.15.1",
    "compression": "^1.6.2",
    "cookie-parser": "~1.4.3",
    "debug": "^2.4.4",
    "dotenv-safe": "^3.0.0",
    "ejs": "^2.5.5",
    "express": "^4.16.1",
    "file-stream-rotator": "0.0.7",
    "hexo": "^3.3.9",
    "hexo-cli": "^1.0.3",
    "hexo-cli-extras": "^1.0.4",
    "hexo-filter-cleanup": "^1.0.7",
    "hexo-front-matter": "^0.2.3",
    "hexo-generator-archive": "^0.1.4",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-feed": "^1.2.2",
    "hexo-generator-index": "^0.2.1",
    "hexo-generator-json-content": "^3.0.1",
    "hexo-generator-search": "^2.1.1",
    "hexo-generator-tag": "^0.2.0",
    "hexo-generator-to-json": "^1.1.12",
    "hexo-pdf": "^1.1.1",
    "hexo-renderer-ejs": "^0.3.1",
    "hexo-renderer-marked": "^0.3.0",
    "hexo-renderer-stylus": "^0.3.3",
    "hexo-reveal": "^1.0.3",
    "hexo-server": "^0.2.2",
    "hexo-util": "^0.6.1",
    "js-yaml": "^3.6.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "morgan": "^1.9.0",
    "nodemailer": "^4.1.3",
    "serve-favicon": "^2.4.5",
    "winston": "^2.2.0",
    "wordwrap": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^4.8.0",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-promise": "3.5.0",
    "eslint-plugin-standard": "2.1.0"
  }
}
